<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Request Type</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Status</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.request_desc %></td>
  <!--      <td><%#= request.request_type.description %></td> -->
        <td><%= request.startDate %></td>
        <td><%= request.endDate %></td>
        <td><%= request.status %></td>
        <td><%= request.employee %></td>
        <td><%#= link_to 'Show', request %></td>
        <td><%#= link_to 'Edit', edit_request_path(request) %></td>
        <td><%#= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

